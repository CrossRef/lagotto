{
  "run_list": [
    "recipe[apt]",
    "recipe[build-essential]",
	"recipe[rvm::system]",
	"recipe[rvm::vagrant]",
	"recipe[alm]"
  ],
  "app": { "layout": "plos", 
           "seed_additional_sources": true,
		       "seed_sample_articles": true,
           "doi_prefix": "10.1371",
           "uid": "doi",
           "sampling": 100,
           "mendeley": { "api_key": "EXAMPLE" },
           "facebook": { "api_key": "EXAMPLE" },
           "crossref": { "username": "EXAMPLE", "password": "EXAMPLE" },
           "researchblogging": { "username": "EXAMPLE", "password": "EXAMPLE" },
           "nature": { "api_key": "EXAMPLE"}},
  "rvm": { "global_gems": [{ "name": "bundler", "version": "1.2.2" }, 
                           { "name": "rake", "version": "10.0.2" },
                           { "name": "chef", "version": "10.16.4" },
                           { "name": "passenger", "version": "3.0.18" }],
           "default_ruby": "ruby-1.9.3-p327" },
  "rails": { "environment": "development" },
  "passenger": { "version": "3.0.18" },
  "admin": { "email": "ADMIN@EXAMPLE.ORG" },
  "mysql": { "bind_address": "0.0.0.0", "tunable": { "innodb_buffer_pool_size": "512M" }},
  "couchdb": { "src_version": "1.1.0", "bind_address": "0.0.0.0", "host": "localhost", "port": 5984, "database": "alm" }
}