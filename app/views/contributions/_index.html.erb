<div class="search-wide">
  <%= form_tag(contributions_path, :method => "get", :class => "form form-horizontal", :role => "form") do %>
    <div class="input-group">
      <%= search_field_tag :q, params[:q], :placeholder => "Search by DOI", :class => "form-control" %>
      <div class="input-group-btn">
        <button type="submit" class="btn btn-primary hidden-xs"><%= icon("search") %></button>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-9" id="content">
    <div class="text-muted loading" id="loading-results">Loading â€¦ <%= image_tag "spinner.gif" %></div>
  </div>
  <div class='col-md-3'>
    <% if Source.for_contributions.size > 0 %>
      <div class="panel facets">
        <div class="panel-body">
          <h4>Sources</h4>
          <ul>
            <% if @source.present? %>
              <li class="active">
                <%= link_to icon('check-square-o').html_safe, contributions_path(q: params[:q], contribution_type_id: params[:contribution_type_id]) %>
                <%= @source.title %>
              </li>
            <% else %>
              <% Source.for_contributions.each do |source| %>
                <li>
                  <%= link_to icon('square-o').html_safe, contributions_path(q: params[:q], contribution_type_id: params[:contribution_type_id], source_id: source.name) %>
                  <%= source.title %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <% if ContributorRole.all.size > 0 %>
      <div class="panel facets">
        <div class="panel-body">
          <h4>Contributor roles</h4>
          <ul>
            <% if @contributor_role.present? %>
              <li class="active">
                <%= link_to icon('check-square-o').html_safe, contributions_path(q: params[:q], source_id: params[:source_id]) %>
                <%= @contributor_role.title %>
              </li>
            <% else %>
              <% ContributorRole.order("name").each do |contributor_role| %>
                <li>
                  <%= link_to icon('square-o').html_safe, contributions_path(q: params[:q], contributor_role_id: contributor_role.name, source_id: params[:source_id]) %>
                  <%= contributor_role.title %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'contributions/index' %>
