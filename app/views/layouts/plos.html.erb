<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>
    <% unless Rails.env.production? %>
        <%= "(#{Rails.env})"  %>
    <% end %>
    <%= APP_CONFIG['useragent'] %>
  </title>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= favicon_link_tag %>
  <%= stylesheet_link_tag "plos" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <header class="hidden-phone"></header>
    <div class="navbar">
  	  <div class="navbar-inner">
        <div class="nav-collapse collapse">
          <% if can? :read, Alert %>
            <ul class="nav">
              <%= controller.controller_name == "index" ? '<li class="visible-desktop active">'.html_safe : '<li class="visible-desktop">'.html_safe %><%= link_to 'Home', admin_root_path %></li>
            </ul>
          <% end %>
        </div>
  				<ul class="nav">
            <% if can? :read, Alert %>
              <%= controller.controller_name == "index" ? '<li class="hidden-desktop active">'.html_safe : '<li class="hidden-desktop">'.html_safe %><%= link_to "Home", admin_root_path %></li>
              <%= controller.controller_name == "articles" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Articles", admin_articles_path %></li>
            <% else %>
              <%= controller.controller_name == "articles" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Articles", articles_path %></li>
            <% end %>
            <% if can? :read, Alert %>
  		        <%= controller.controller_name == "sources" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Sources", admin_sources_path %></li>
            <% else %>
              <%= controller.controller_name == "sources" ? '<li class="active">'.html_safe : '<li>'.html_safe %><%= link_to "Sources", sources_path %></li>
            <% end %>
          </ul>
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="nav-collapse collapse">
            <% if can? :read, Alert %>
              <ul class="nav">
                <%= controller.controller_name == "api_requests" ? '<li class="dropdown active">'.html_safe : '<li class="dropdown">'.html_safe %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "All Users", admin_users_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Local API Requests", admin_api_requests_path(local: 1) %></li>
                    <li><%= link_to "External API Requests", admin_api_requests_path %></li>
                    <li><%= link_to "Other API Requests", admin_api_requests_path(source: 1) %></li>
                  </ul>
                </li>
                <%= ["filters","alerts"].include?(controller.controller_name) ? '<li class="dropdown active">'.html_safe : '<li class="dropdown">'.html_safe %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Errors <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Alerts', admin_alerts_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Filters", admin_filters_path %></li>
                </ul>
              </li>
              </ul>
            <% end %>
            <% unless ["sessions","registrations"].include?(controller.controller_name) %>
              <ul class="nav pull-right" id="user_menu">
                <% if user_signed_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= h(current_user.name) %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to '<i class="icon-user"></i> Your Account'.html_safe, user_path("me") %></li>
                      <li class="divider"></li>
                      <li><%= link_to '<i class="icon-off"></i> Sign Out'.html_safe, destroy_user_session_path, :method => :delete, :id => "sign_out" %></li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to "Create Account", "https://register.plos.org/ambra-registration/register.action" %></li>
                  <li><%= link_to_setup_or_login %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
  			</div>
  		</div>

    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
