<div class="page-header">
  <h1>Publishers
    <% unless params[:query].blank? %>
      <small>with <em><%= params[:query] %></em> in the name or as CrossRef member ID</small>
    <% end %>
  </h1>
</div>

<div class="search">
  <%= form_tag(publishers_path, :method => "get", :class => "form-inline", :role => "form") do %>
    <div class="form-group">
      <%= search_field_tag :query, params[:query], :placeholder => "Search", :class => "form-control" %>
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
    <% unless params[:query].blank? %>
      <%= link_to "clear", publishers_path, :class => "btn" %>
    <% end %>
  <% end %>
</div>

<% if @publishers.size > 0 %>
  <div class="panel-group" id="publisher">
    <% @publishers.each do |publisher| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title"><%= link_to h(publisher.name), "#publisher_#{publisher.id}", :class => "accordion-toggle", :id => "link_#{publisher.id}", :data => { :toggle => "collapse", :parent => "#publisher" }, :href => "#publisher_#{publisher.id}" %></h4>
        </div>
        <div id="publisher_<%= publisher.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <% if can?(:manage, publisher) %>
              <div class="btn-group btn-sm pull-right">
                <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, publisher_path(publisher, :query => params[:query], :role => params[:role]), :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true, :class => 'btn btn-default btn-sm', :id => "#{publisher.id}-delete" %>
              </div>
            <% end %>

            <% if publisher.crossref_id.present? %>
              <h5>CrossRef ID</h5>
              <%= link_to publisher.crossref_id, "http://api.crossref.org/members/#{publisher.crossref_id}" %>
            <% end %>

            <h5>Account created</h5>
            <%= publisher.created_at.to_s(:friendly) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @publishers, :params => { :controller => publishers_path }, :renderer => BootstrapPagination::Rails %>
<% else %>
  <div class="alert alert-info">There are currently no publishers
    <% unless params[:query].blank? %>
        with <em><%= params[:query] %></em> in the name or as CrossRef member ID
    <% end %>
  </div>
<% end %>
