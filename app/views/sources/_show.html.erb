<div class="panel panel-default">
  <div class="panel-heading panel-title">
    <%= @source.title %> <small class="pull-right" id="timestamp"><%= date_from_iso8601(@source.timestamp) + ' UTC' %> <%= state_label(@source.human_state_name).html_safe %></small>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <% unless @source.group.blank? %>
        <dt>Group</dt>
        <dd><%= h(@source.group.title) %></dd>
      <% end %>
      <% unless @source.description.blank? %>
        <dt>Description</dt>
        <dd><%= h(@source.description) %></dd>
      <% end %>
    </dl>
  </div>
</div>

<% if @source.group.name != "other" %>
  <ul class="nav nav-pills">
      <li class="active"><a href="#summary" data-toggle="tab" title="Summary">Summary</a></li>
      <li><a href="#works" data-toggle="tab">Works</a></li>
      <li><a href="#events" data-toggle="tab">Events</a></li>
      <li><a href="#documentation" data-toggle="tab" title="Documentation">Documentation</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="summary">
        <div id="summary-show">
          <%= render :partial => 'summary_show', :locals => { :name => @source.name } %>
        </div>
      </div>
      <div class="tab-pane" id="works">
        <%= render :partial => 'works' %>
      </div>
      <div class="tab-pane" id="events">
        <%= render :partial => 'events_show' %>
      </div>
      <div class="tab-pane" id="documentation">
        <%= render :partial => 'docs/show' %>
      </div>
    </div>
  </div>

  <%= javascript_include_tag 'sources/show' %>
<% end %>
