<div class="content">
  <div class="page-header">
    <h1><%= h(@source.display_name) %></h1>
  </div>
  
  <dl class="dl-horizontal">
    <dt>Status</dt>
    <dd><%= @source.status %></dd>
    <% if @source.group %>
      <dt>Group</dt>
      <dd><%= h(@source.group.name) %></dd>
    <% end %>
    <% unless @source.private %>
      <dt>Documentation</dt>
      <dd><%= link_to "Information at ALM Wiki", "http://github.com/articlemetrics/alm/wiki/" + @source.name %></dd>
    <% end %>
  </dl>
  
  <% unless @source.private %>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#article" data-toggle="tab">Most-Cited Articles</a></li>
    </ul>
  
    <div class="tab-content">
      <div class="tab-pane active" id="article">  
        <% unless @samples.empty? %>
          <% @samples.each do |retrieval_status| %> 
            <div class="row">
              <div class="span12">
                <h4><%= link_to retrieval_status.article.title, retrieval_status.article %></h4>
                <%= retrieval_status.article.published_on.to_s(:long) %> - <%= pluralize retrieval_status.event_count, "event" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="alert alert-info">No articles have been cited by this source</div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>