<div class="content">
  <div class="page-header">
    <h1>Sources</h1>
  </div>

  <% unless @groups.empty? %>
    <% @groups.each do |group| %>
      <% unless group.sources.installed.empty? %>
        <h2 class="border-bottom"><%= h(group.display_name) %></h2>
        <% group.sources.installed.each do |source| %>
          <h4 class="source"><%= link_to h(source.display_name), source_path(source) %></h4>
          <p><%= h(source.description) if source.description %></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>