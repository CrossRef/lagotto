<div class="content">
  <div class="page-header">
    <h1>Sources</h1>
  </div>
  
  <% unless @groups.empty? %>
    <% @groups.each do |group| %>
      <% unless group.sources.where("active = 1").empty? %>
        <h2><%= h(group.name) %></h2>
        <ul class="thumbnails">
          <% group.sources.where("active = 1").each do |source| %>
            <li class="span3">
              <div class="thumbnail">
                <div class="caption">
                  <h4>
                    <%= image_tag source.name + ".png" if path_to_image(source.name + ".png") %>
                    <%= link_to h(source.display_name), source_path(source) %>
                  </h4>
                  <p><%= h(source.description) if source.description %></p>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</div>