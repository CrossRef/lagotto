<table class="table table-striped" id="SummaryTable">
  <thead>
    <tr>
      <th/>
      <th class="number">Pending</th>
      <th class="number">Working</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Jobs</th>
      <td class="number"><%= number_with_delimiter(@source.delayed_jobs.count - @source.delayed_jobs.count(:locked_at)) %></td>
      <td class="number"><%= number_with_delimiter(@source.delayed_jobs.count(:locked_at)) %></td>
    </tr>
    <tr>
      <th/>
      <th class="number">Responses</th>
      <th class="number">Errors</th>
    </tr>
    <tr>
      <th>Responses in the last 24 Hours</th>
      <td class="number"><%= number_with_delimiter(@source.api_responses.total(1).size) %></td>
      <td class="number"><%= link_to_if @source.alerts.total(1).size > 0, number_with_delimiter(@source.alerts.total(1).size), admin_alerts_path(:source_id => @source.id) %></td>
    </tr>
    <tr>
      <th/>
      <th class="number">Average</th>
      <th class="number">Maximum</th>
    </tr>
    <tr>
      <th>Response duration in the last 24 Hours (ms)</th>
      <td class="number"><%= number_with_precision(@source.api_responses.total(1).average("duration").nil? ? 0 : @source.api_responses.total(1).average("duration"), precision: 0) %></td>
      <td class="number"><%= number_with_precision(@source.api_responses.total(1).maximum("duration").nil? ? 0 : @source.api_responses.total(1).maximum("duration"), precision: 0) %></td>
    </tr>
    <tr>
      <th/>
      <th class="number">Articles&nbsp;with&nbsp;Events</th>
      <th class="number">All Events</th>
    </tr>
    <tr>
      <th>Events</th>
      <td class="number"><%= number_with_delimiter(@source.articles.cited(1).size) %></td>
      <td class="number"><%= number_with_delimiter(@source.retrieval_statuses.sum(:event_count)) %></td>
    </tr>
  </tbody>
</table>
