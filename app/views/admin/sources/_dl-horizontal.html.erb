<% if can?(:read, Alert) %>
  <div class="visible-phone">
    <dt>Status</dt>
    <dd><%= h(@source.status) %></dd>
  </div>
  <% if @source.run_at > Time.zone.now %>
    <dt>Scheduled Run</dt>
    <dd><%= @source.run_at.to_s(:friendly) %></dd>
  <% end %>
<% end %>
<% unless @source.group.blank? %>
  <dt>Group</dt>
  <dd><%= h(@source.group.name) %></dd>
<% end %>
<% unless @source.description.blank? %>
  <dt>Description</dt>
  <dd><%= h(@source.description) %></dd>
<% end %>
