<div class="content">
  <div class="page-header">
    <h1 id="api_key" data-api_key="<%= CONFIG[:api_key] %>">Status <small id="update_date"></small></h1>
  </div>

  <ul class="nav nav-tabs" id="nav_index">
    <li class="active"><a href="#summary" data-toggle="tab" title="Summary">Summary</a></li>
    <% if CONFIG[:workers] > 0 %>
      <li><a href="#workers" data-toggle="tab" title="Workers">Workers</a></li>
    <% end %>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="summary">
      <%= render :partial => 'summary' %>
    </div>

    <% if CONFIG[:workers] > 0 %>
      <div class="tab-pane" id="workers">
        <%= render :partial => 'workers' %>
      </div>
    <% end %>
  </div>

  <%= javascript_include_tag 'status/index' %>
</div>
