<% if can?(:manage, Article) and (controller.action_name == "new" or (controller.action_name == "create" and !@article.errors.empty?)) %>

<%= simple_form_for @article, :url => admin_articles_path, :html => { :class => 'form-horizontal', :remote => true } do |f| %>
    <fieldset>
      <legend>New Article</legend>

      <%= f.input :title, :input_html => { :rows => 2, :class => "span6" } %>
      <%= f.input :doi, :label => 'DOI', :input_html => { :class => "span6" } %>
      <%= f.input :pub_med, :label => 'PubMed ID', :input_html => { :class => "span6" } %>
      <%= f.input :pub_med_central, :label => 'PubMed Central ID', :input_html => { :class => "span6" } %>
      <%= f.input :mendeley, :label => 'Mendeley UUID', :input_html => { :class => "span6" } %>
      <%= f.input :url, :label => 'URL', :input_html => { :class => "span6" } %>
      <%= f.input :published_on, :label => 'Publication Date', :as => :date, :start_year => Time.zone.now.year - 10, :end_year => Time.zone.now.year, :order => [:day, :month, :year], :input_html => { :class => "span1" } %>

      <div class="form-actions">
        <%= f.submit "Save ", class: "btn btn-primary" %>
        <%= link_to 'Cancel', admin_articles_path, { :remote => true, :class => 'btn' } %>
      </div>
    </fieldset>
  <% end %>

<% else %>
  <div class="page-header">
    <% if can?(:manage, Article) %>
      <div class="btn-toolbar pull-right">
        <div class="btn-group">
          <%= link_to '<i class="icon-plus"></i> New'.html_safe, new_admin_article_path, { :remote => true, :id => "new_article", :class => 'btn btn-small' } %>
        </div>
        <div class="btn-group" id="article-alerts">
          <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-filter"></i> <%= @class_name.nil? ? "All Articles" : h(@class_name) %> <span class="caret"></span></a>
          <ul class="dropdown-menu pull-right">
            <li><%= link_to "All Articles", admin_articles_path(:query => params[:query]) %></li>
            <li class="divider"></li>
            <li><%= link_to "All Alerts", admin_articles_path(:class_name => "All Alerts", :query => params[:query]) %></li>
            <li class="divider"></li>
            <% article_alerts.each do |alert| %>
            <li><%= link_to h(alert), admin_articles_path(:class_name => alert, :query => params[:query]) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <h1>
      <%= pluralize(@articles.total_entries, 'Article') %>
      <% unless params[:query].blank? %>
          <small>with <em><%= params[:query] %></em> in the title or DOI</small>
      <% end %>
    </h1>
  </div>
<% end %>

<% if can?(:manage, Article) %>
  <div class="search">
    <%= form_tag(admin_articles_path, :method => "get", :class => "form-search") do %>
      <%= search_field_tag :query, params[:query], :placeholder => "Search", :class => "input-large", :id => "appendedInputButtons" %>
      <button type="submit" class="btn hidden-phone"><i class="icon-search"></i></button>
      <% unless params[:query].blank? %>
        <%= link_to "clear", admin_articles_path, :class => "btn btn-link hidden-phone" %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="search">
    <%= form_tag(articles_path, :method => "get", :class => "form-search") do %>
      <%= search_field_tag :query, params[:query], :placeholder => "Search", :class => "input-large", :id => "appendedInputButtons" %>
      <button type="submit" class="btn hidden-phone"><i class="icon-search"></i></button>
      <% unless params[:query].blank? %>
        <%= link_to "clear", articles_path, :class => "btn btn-link hidden-phone" %>
      <% end %>
    <% end %>
  </div>
<% end %>

<% if @articles.size > 0 %>
  <% @articles.each do |article| %>
    <% cache article do %>
      <div class="row">
      <div class="span12">
        <h4><%= link_to article.title, article %></h4>
        <%= article.published_on.to_s(:long) %> - <%= pluralize article.cited_retrievals_count, "source" %>
      </div>
      </div>
    <% end %>
  <% end %>
  <div class="row">
    <div class="span11 offset1">
       <%= will_paginate @articles, :renderer => BootstrapPagination::Rails %>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">No articles found</div>
<% end %>
