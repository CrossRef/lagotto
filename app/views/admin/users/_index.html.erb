<div class="page-header">
  <div class="btn-group btn-sm pull-right">
    <a class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-filter"></i> <%= @role.nil? ? "All Roles" : @role.capitalize %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to "All Roles", admin_users_path(:query => params[:query]) %></li>
      <li class="divider"></li>
      <% roles.each do|role| %>
      <li><%= link_to h(role.capitalize), admin_users_path(:role => role, :query => params[:query]) %></li>
      <% end %>
    </ul>
  </div>
  <h1>Users
    <% unless params[:query].blank? %>
      <small>with <em><%= params[:query] %></em> in the name, username or API key</small>
    <% end %>
  </h1>
</div>

<div class="search">
  <%= form_tag(admin_users_path, :method => "get", :class => "form-inline", :role => "form") do %>
    <div class="form-group">
      <%= search_field_tag :query, params[:query], :placeholder => "Search", :class => "form-control" %>
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
    <% unless params[:query].blank? %>
      <%= link_to "clear", admin_users_path(:role => params[:role]), :class => "btn" %>
    <% end %>
  <% end %>
</div>

<div class="panel-group" id="user">
  <% @users.each do |user| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= link_to ("#{h(user.name)}<small class='pull-right'>#{user.last_sign_in_at.blank? ? "" : user.last_sign_in_at.to_s(:short)}</small>").html_safe, "#user_#{user.id}", :class => "accordion-toggle", :id => "link_#{user.id}", :data => { :toggle => "collapse", :parent => "#user" }, :href => "#user_#{user.id}" %></h4>
      </div>
      <div id="user_<%= user.id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <% if can?(:manage, user) and user.id != current_user.id %>
            <div class="btn-group btn-sm pull-right">
              <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, admin_user_path(user, :query => params[:query], :role => params[:role]), :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true, :class => 'btn btn-default btn-sm', :id => "#{user.id}-delete" %>
              <a class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" href="#" id='<%= "#{user.id}-update" %>'>
                <span class="glyphicon glyphicon-pencil"></span> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% if user.role != "user" %>
                  <li><%= link_to "Role User", admin_user_path(user, :query => params[:query], :role => params[:role], :user => { :role => "user" }), :method => :put, :remote => true, :id => "#{user.id}-update-user" %></li>
                <% end %>
                <% if user.role != "staff" %>
                  <li><%= link_to "Role Staff", admin_user_path(user, :query => params[:query], :role => params[:role], :user => { :role => "staff" }), :method => :put, :remote => true, :id => "#{user.id}-update-staff" %></li>
                <% end %>
                <% if user.role != "admin" %>
                  <li><%= link_to "Role Admin", admin_user_path(user, :query => params[:query], :role => params[:role], :user => { :role => "admin" }), :method => :put, :remote => true, :id => "#{user.id}-update-admin" %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <h5>Username</h5>
          <%= h(user.username) %>

          <% if user.email.present? %>
            <h5>Email</h5>
            <%= link_to h(user.email), "mailto:#{user.email}" %>
          <% end %>

          <h5>API key</h5>
          <%= link_to user.authentication_token, admin_api_requests_path(key: user.authentication_token) %>

          <h5>Role</h5>
          <%= user.role.capitalize %>

          <h5>Account created</h5>
          <%= user.created_at.to_s(:friendly) %>

          <h5>Sign in count</h5>
          <%= user.sign_in_count %>

        </div>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @users, :params => { :controller => admin_users_path }, :renderer => BootstrapPagination::Rails %>
