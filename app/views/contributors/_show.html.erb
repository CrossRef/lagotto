<div class="row work-page">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <h4 class="work"><%= @contributor.credit_name.presence || @contributor.pid %></h4>
      </div>
      <div class="panel-footer">
        <%= link_to h(icon("external-link") + " " + @contributor.pid).html_safe, @contributor.pid %>
        <% if can?(:manage, @contributor) %>
          <div class="btn-toolbar pull-right">
            <div class="btn-group btn-group-sm">
              <%= link_to icon("trash").html_safe, contributor_path(@contributor.pid), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-default' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel facets">
      <div class="panel-body metadata">
        <% if @contributor.orcid.present? %>
            <h5>ORCID</h5>
            <div class="metadata"><%= link_to "http://orcid.org/#{@contributor.orcid}", "http://orcid.org/#{@contributor.orcid}" %></div>
          <% end %>
          <% if @contributor.github.present? %>
            <h5>Github</h5>
            <div class="metadata"><%= link_to "https://github.com/#{@contributor.github}", "https://github.com/#{@contributor.github}" %></div>
          <% end %>
      </div>
    </div>
  </div>
</div>
