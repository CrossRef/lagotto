<div class="content">
  <div id="show">
    <%= render :partial => 'admin/users/show' %> 
  </div>
  
  <hr>
  
  <div class="row">
    <div class="span9">
      <h1>Getting Started</h1>
      <div class="markdown">
        <%= markdown @doc[:text] %>
      </div>
    </div>
    <div class="span3">
      <div class="sidebar-nav-fixed-lower visible-desktop">
        <ul class="nav nav-list">
          <li class="nav-header">Documentation</li>
          <% documents.each do|document| %>
            <li><%= link_to h(document.tr('-', ' ')), doc_path(document) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>